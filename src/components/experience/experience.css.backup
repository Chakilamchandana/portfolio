.swiper {
  width: 40rem;
  height: 50rem;
  border-radius: 3rem;
  background-color: var(--color-bg-variant);
  border: solid 1px;
  cursor: grab;
  transition: var(--transition);
}
.mySwiper {
  margin-bottom: 2rem;
}

.swiper:hover {
  background-color: transparent;
  border-color: var(--color-white);
}

.sliderheader {
  margin: 2rem 1rem;
  text-align: center;
  color: var(--color-white);
  border-bottom: 2px solid var(--color-primary);
  background-color: var(--color-primary-variant);
  border-radius: 3rem;
  padding: 2rem;
  transition: var(--transition);
}

.sliderheader:hover {
  background-color: transparent;
  border-color: var(--color-white);
  color: var(--color-primary);
}

.slidercontent {
  display: grid;
  grid-template-columns: 10% 90%;
}

.sliderpoint {
  font-size: 1.1rem;
  margin-right: 2rem;
  margin-bottom: 1.5rem;
  text-align: justify;
  color: var(--color-primary);
}

.slidericon {
  margin-left: 1rem;
  margin-top: 0.5rem;
  display: flex;
  color: var(--color-primary);
}

