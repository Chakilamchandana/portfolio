media queries
.swiper {
    width: 90%;
    height: fit-content;
  }

  .slidericon {
    margin-left: 0.5rem;
    margin-top: 0.5rem;
  }
  .sliderpoint {
    font-size: 15px;
  }

  .experience_container {
  display: grid;
  grid-template-columns: repeat(4, 0.6fr);
  margin: 2rem;
}

.container__card {
  height: auto;
}

container__skills {
  display: grid;
  grid-template-columns: 0.33fr 0.33fr 0.33fr;
  gap: 2rem;
}

.container__skills > div {
  background: var(--color-bg-variant);
  border: 1px solid;
  border-radius: 2rem;
  padding: 2rem;
  transition: var(--transition);
}

.container__skills > div:hover {
  background-color: transparent;
  border-color: var(--color-white);
  cursor: default;
}

.container__skills > div h3 {
  text-align: center;
  color: var(--color-primary);
  margin-bottom: 1rem;
}

.skills__content {
  display: grid;
  grid-template-columns: 1.2fr 1fr;
  row-gap: 2rem;
}

.skills__details {
  display: flex;
  gap: 0.7rem;
}

.skills__details-icon {
  margin-top: 6px;
  color: var(--color-primary);
}

@media screen and (max-width: 1024px) {
  .container__skills {
    grid-template-columns: 1fr;
  }
  .container__skills > div {
    width: 75%;
    /* padding: 2rem; */
    margin: 0 auto;
  }

  .skills__content {
    padding: 2rem;
  }

  .swiper {
    width: 90%;
    height: fit-content;
  }
}

@media screen and (max-width: 600px) {
  .container__skills {
    gap: 2rem;
  }

  .container__skills > div {
    padding: 2rem 1rem;
    width: 100%;
  }
}
